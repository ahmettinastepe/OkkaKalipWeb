@model InfoModel
@{
    ViewData["Title"] = "Firma Bilgilerinizi Buradan Değiştirebilirsiniz";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<form asp-controller="Info" asp-action="EditInfo" method="post" enctype="multipart/form-data">
    <div class="col-12 col-md-12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card card-primary card-outline card-outline-tabs">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#custom-tabs-three-home" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">Logo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-address-tab" data-toggle="pill" href="#custom-tabs-three-address" role="tab" aria-controls="custom-tabs-address" aria-selected="false">Adres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-contact-tab" data-toggle="pill" href="#custom-tabs-three-contact" role="tab" aria-controls="custom-tabs-three-contact" aria-selected="false">İletişim Bilgileri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-social-tab" data-toggle="pill" href="#custom-tabs-three-social" role="tab" aria-controls="custom-tabs-three-social" aria-selected="false">Sosyal Medya Linkleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-three-map-tab" data-toggle="pill" href="#custom-tabs-three-map" role="tab" aria-controls="custom-tabs-three-map" aria-selected="false">Harita</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="custom-tabs-three-tabContent">
                    <div class="tab-pane fade active show" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                        <section class="content">
                            <div class="card card-solid">
                                <div class="card-body pb-0">
                                    <div class="row d-flex align-items-stretch">
                                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                            <div class="card bg-light">
                                                <div class="card-header text-muted border-bottom-0">
                                                    Navbar Logo
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <input type="hidden" name="logoHeader" value="@Model.LogoHeader" />
                                                            <img src="~/img/info/@Model.LogoHeader" alt="Alternate Text" />

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="text-right">
                                                        <input type="file" name="logoHeader" value="" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                            <div class="card bg-light">
                                                <div class="card-header text-muted border-bottom-0">
                                                    Footer Logo
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <input type="hidden" name="logoFooter" value="@Model.LogoFooter" />
                                                            <img src="~/img/info/@Model.LogoFooter" alt="Alternate Text" />

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="text-right">
                                                        <input type="file" name="logoFooter" value="" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="tab-pane fade" id="custom-tabs-three-address" role="tabpanel" aria-labelledby="custom-tabs-three-address-tab">
                        <section class="content">
                            <div class="container-fluid">

                                <div class="card card-default">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="Address">Firma Açık Adresi</label>
                                                    <textarea asp-for="Address" value="@Model.Address" class="form-control" rows="3" placeholder="Adres ..."></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.row -->

                                    </div>
                                </div>

                            </div>
                        </section>
                    </div>

                    <div class="tab-pane fade" id="custom-tabs-three-contact" role="tabpanel" aria-labelledby="custom-tabs-three-contact-tab">
                        <section class="content">
                            <div class="container-fluid">

                                <div class="card card-default">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Email-1</label>
                                                    <input asp-for="Email1" value="@Model.Email1" type="text" class="form-control" placeholder="Birincil Email Adresini Giriniz ...">
                                                    <span asp-validation-for="Email1" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Email-2</label>
                                                    <input asp-for="Email2" value="@Model.Email2" type="text" class="form-control" placeholder="İkincil Email Adresini Giriniz ...">
                                                    <span asp-validation-for="Email2" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Telefon-1</label>
                                                    <input asp-for="Tel1" value="@Model.Tel1" type="text" class="form-control" placeholder="Birincil Telefon Numarasını Giriniz ...">
                                                    <span asp-validation-for="Tel1" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Telefon-2</label>
                                                    <input asp-for="Tel2" value="@Model.Tel2" type="text" class="form-control" placeholder="İkincil Telefon Numarasını Giriniz ...">
                                                    <span asp-validation-for="Tel2" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <div class="tab-pane fade" id="custom-tabs-three-social" role="tabpanel" aria-labelledby="custom-tabs-three-social-tab">
                        <section class="content">
                            <div class="container-fluid">

                                <div class="card card-default">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Facebook Url</label>
                                                    <input asp-for="FacebookUrl" value="@Model.FacebookUrl" type="text" class="form-control" placeholder="örn: https://facebook.com">
                                                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Instagram Url</label>
                                                    <input asp-for="InstagramUrl" value="@Model.InstagramUrl" type="text" class="form-control" placeholder="örn: https://instagram.com">
                                                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Twitter Url</label>
                                                    <input asp-for="TwitterUrl" value="@Model.TwitterUrl" type="text" class="form-control" placeholder="örn: https://twitter.com">
                                                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Youtube Url</label>
                                                    <input asp-for="YoutubeUrl" value="@Model.YoutubeUrl" type="text" class="form-control" placeholder="örn: https://youtube.com">
                                                    <span asp-validation-for="YoutubeUrl" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </section>
                    </div>

                    <div class="tab-pane fade" id="custom-tabs-three-map" role="tabpanel" aria-labelledby="custom-tabs-three-map-tab">
                        <section class="content">
                            <div class="container-fluid">

                                <div class="card card-default">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="MapIframe">Firma Açık Adresi</label>
                                                    <textarea asp-for="MapIframe" value="@Model.MapIframe" class="form-control" rows="3" placeholder="Harita Linki ..."></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right">Tüm Değişiklikleri Kaydet</button>
        </div>
    </div>
</form>