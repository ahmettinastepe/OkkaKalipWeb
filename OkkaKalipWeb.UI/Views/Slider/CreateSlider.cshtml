@model SliderModel
@{
    ViewData["Title"] = "Yeni Slider";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-square"></i>
                    Yeni Slider Ekle
                </h3>
            </div>
            <div class="card-body">

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    }


                    <!-- form start -->
                    <form asp-controller="Slider" asp-action="CreateSlider" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="ImageUrl">Image</label>
                                <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" placeholder="Slider Resmi Yükleyiniz...">
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Title">Slider Başlığı</label>
                                <input asp-for="Title" value="@Model.Title" class="form-control" placeholder="Slider Başlığını Giriniz...">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Description">Açıklama</label>
                                <textarea asp-for="Description" value="@Model.Description" id="editor" class="form-control" rows="3" placeholder="Slider Açıklaması ..."></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i>
                                Kaydet
                            </button>
                            <a class="btn btn-outline-info ml-6" href='javascript:history.go(-1)'>
                                <i class="fas fa-chevron-left"></i>
                                Listeye Dön
                            </a>
                        </div>
                    </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.col -->
</div>