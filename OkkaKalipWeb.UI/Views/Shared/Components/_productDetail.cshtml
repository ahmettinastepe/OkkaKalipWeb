@model ProductDetailsModel
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="slider-product">
                    <div class="item">
                        <img src="~/img/product/@Model.Product.ImageUrl" alt="product image">
                    </div>
                    <div class="item">
                        <img src="~/img/product/@Model.Product.ImageUrl" alt="product image">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/750x750.png" alt="product image">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/750x750.png" alt="product image">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/750x750.png" alt="product image">
                    </div>
                </div>
                <div class="slider-product-nav">
                    <div class="item">
                        <img src="~/img/product/@Model.Product.ImageUrl" alt="product image" draggable="false">
                    </div>
                    <div class="item">
                        <img src="~/img/product/@Model.Product.ImageUrl" alt="product image" draggable="false">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/88x88.png" alt="product image" draggable="false">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/88x88.png" alt="product image" draggable="false">
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/88x88.png" alt="product image" draggable="false">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Ürünü İncele</h3>
                <h4>@Model.Product.Name</h4>
                <div class="product-rating">
                    <span><i class="icon ion-md-star"></i></span>
                    <span><i class="icon ion-md-star"></i></span>
                    <span><i class="icon ion-md-star"></i></span>
                    <span><i class="icon ion-md-star"></i></span>
                    <span><i class="icon ion-md-star-half"></i></span>
                    <span class="rating-text">2 Review</span>
                </div>
                <div class="product-price"><span class="sale">@Model.Product.Price </span><span class="price">@Model.Product.Price</span></div>
                <hr>
                <p></p>
                <div class="industris-space-30"></div>
                <div class="industris-space-5"></div>
                <div class="quantity-choose">
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                        <input type="number" name="quantity" value="1" min="1" step="1" />
                        <button class="btn btn-primary" type="submit">
                            <i class="ion-md-cart"></i> &nbsp;
                            Sepete Ekle
                        </button>
                    </form>
                </div>
                <div class="industris-space-60"></div>
                <div class="product-info">
                    <ul>
                        <li>SKU: <strong>357</strong> </li>
                        <li>
                            Category: @foreach (var category in Model.Categories)
                            {
                                <a href="#"><strong>@category.Name</strong></a>
                            }
                        </li>
                        <li>Tags: <a href="Pipes"><strong>Pipes</strong></a>, <a href="#"><strong>Care</strong></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="no-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-industris clearfix">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#shopdesc" aria-expanded="true">Description</a></li>
                        <li class=""><a data-toggle="tab" href="#shopreview" aria-expanded="false">Review (0)</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="shopdesc" class="tab-pane active">
                            <p>@Html.Raw(Model.Product.Description)</p>
                        </div>
                        <partial name="Components/_review" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>