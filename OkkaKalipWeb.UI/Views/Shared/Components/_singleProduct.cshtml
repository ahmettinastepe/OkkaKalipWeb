@model Product
<div class="col-md-6">
    <div class="product-box">
        <div class="product-head">
            <img src="@Model.ImageUrl" alt="@Model.Name">
            <div class="product-btn">
                <a href="cart.html" class="btn btn-primary">Sepete Ekle</a>
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn view-detail">Ürün Detayı</a>
            </div>
        </div>
        <div class="product-content">
            <div class="product-price"><span class="sale">@Model.Price </span><span class="price">@Model.Price</span></div>
            <h3><a href="shop-detail.html">@Model.Name </a></h3>
        </div>
    </div>
</div>