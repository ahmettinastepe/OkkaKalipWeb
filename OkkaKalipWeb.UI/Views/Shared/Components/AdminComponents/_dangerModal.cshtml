@model BaseModel
<!-- Modal -->
<div class="modal fade" id="modal-danger@(Model.Id)">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Silme Onay</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Seçtiğiniz <b>@Model.Title</b> adlı kayıt silinecektir. Onaylıyor musunuz?&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Vazgeç</button>

                <form asp-controller="@(Model.Controller)" asp-action="@(Model.Action)" method="post" style="display:inline">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-trash"></i>
                        Kaydı Sil
                    </button>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->