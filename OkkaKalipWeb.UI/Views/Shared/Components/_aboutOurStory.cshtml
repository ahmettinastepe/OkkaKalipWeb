@model AboutModel
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <h4 class="text-primary">BİZİM HİKAYEMİZ</h4>
                <h2>@Model.AboutTitle</h2>
                <p>@Model.AboutDescription</p>
                <br>
                <p>
                    Bağlantı Kurun — <br>
                    Bizimle Nasıl İletişim Kuracağınızı Öğrenin.
                </p>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-primary">Bize Ulaşın</a>
                <div class="industris-space-sm"></div>
            </div>
            <div class="col-md-offset-1 col-md-5 col-sm-12 sm-center">
                <div class="about-img-right">
                    <img src="~/img/about/@(Model.ImageUrl)" alt="">
                    <div class="about-img-small">
                        <div class="overlay"><img src="~/img/about/about-circle.png" class="circle-img" alt=""></div>
                        <div class="about-content">
                            <h2 class="text-primary">@Model.ExperienceYear+</h2>
                            <p class="text-white">Yılların Deneyimi</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="industris-space-60"></div>
    <div class="industris-space"></div>
</section>

<section class="video-about">
    <div class="container-custom">
        <div class="bg-about-video"><img src="@(Url.Content("~/img/about/bg-about-video.jpg"))" alt=""></div>
        <div class="container">
            <div class="breadc-box">
                <div class="row">
                    <div class="col-md-5 col-sm-8 col-xs-12">
                        <h4 class="text-white">@Model.YoutubeTitle</h4>
                        <h2 class="text-white">@Model.YoutubeDescription</h2>
                    </div>
                    <div class="col-md-offset-1 col-md-6 col-sm-4 col-xs-12 text-right">
                        <div class="about-video video-player">
                            <a class="play-btn" href="@(Model.YoutubeUrl)"><i class="icon ion-ios-play"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="industris-space-60"></div>
    <div class="industris-space"></div>
</section>

<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h3>@Model.ValuesTitle</h3>
                <p>@Model.ValuesDescription</p>
                <img src="@(Model.InfoModel.LogoHeader)" alt="">
                <div class="row">
                    <div class="col-md-offset-1 col-md-6 no-padding-sm-left">
                        <div class="about-author">
                            <div class="about-author-info">
                                <h4><strong>@Model.Founder</strong></h4>
                                <p>@Model.Rank</p>
                            </div>
                            <div class="about-author-media">
                                <a href="@(Model.InfoModel.FacebookUrl)"><i class="icon ion-logo-facebook"></i></a>
                                <a href="@(Model.InfoModel.TwitterUrl)"><i class="icon ion-logo-twitter"></i></a>
                                <a href="@(Model.InfoModel.InstagramUrl)"><i class="icon ion-logo-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="industris-space-sm"></div>
            </div>
            <div class="col-md-offset-1 col-md-4 about-border-left">
                <h3>Why we’re different</h3>
                <p>As fellow entrepreneurs, we understand the need for space which gives your business room</p>
                <ul class="unstyle">
                    <li><i class="icon ion-md-checkmark-circle"></i><a href="#">Flexible solutions</a></li>
                    <li><i class="icon ion-md-checkmark-circle"></i><a href="#">Free technology</a></li>
                    <li><i class="icon ion-md-checkmark-circle"></i><a href="#">Improved operating conditions</a></li>
                    <li><i class="icon ion-md-checkmark-circle"></i><a href="#">Transparent costs</a></li>
                </ul>
                <a href="#" class="btn btn-primary">Get a quote</a>
            </div>
        </div>
    </div>
    <div class="industris-space-60"></div>
    <div class="industris-space"></div>
</section>

<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h3>VİZYONUMUZ</h3>
                <img src="~/img/about/vision.jpg" alt="">
                <div class="industris-space-60"></div>
                <p>@Model.Vision</p>
                <div class="industris-space-sm"></div>
            </div>
            <div class="col-md-offset-1 col-md-5 about-border-left">
                <h3>MİSYONUMUZ</h3>
                <img src="~/img/about/mission.jpg" alt="">
                <div class="industris-space-60"></div>
                <p>@Model.Mission</p>
                <div class="industris-space-sm"></div>
            </div>
        </div>
    </div>
    <div class="industris-space-60"></div>
    <div class="industris-space"></div>
</section>