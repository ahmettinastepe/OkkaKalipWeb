@model NewsModel
@{
    ViewData["Title"] = Model.Title + "için güncelleme işlemi";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/modules/ckeditor4/ckeditor.js"></script>
    <script>
        CKEDITOR.removeAllListeners();
        CKEDITOR.replace("editor");
    </script>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    <b>"@Model.Title"</b> Adlı Haber İçin Güncelleme İşlemi
                </h3>
            </div>
            <div class="card-body">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="text-danger">@ViewBag.ErrorMessage</div>
                }


                <!-- form start -->
                <form asp-controller="News" asp-action="EditNews" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <div class="card-body">
                        <div class="form-group row">
                            <label asp-for="ImageUrl">Image</label>
                            <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                            <img src="~/img/news/@Model.ImageUrl" width="100" />
                            <input type="file" name="file" value="" />
                        </div>
                        <div class="form-group row">
                            <label asp-for="Author">Haber Yazarı</label>
                            <input asp-for="Author" value="@Model.Author" class="form-control" placeholder="Haber Yazarını Giriniz...">
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Title">Slider Başlığı</label>
                            <input asp-for="Title" value="@Model.Title" class="form-control" placeholder="Haber Başlığını Giriniz...">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description">Açıklama</label>
                            <textarea asp-for="Description" value="@Model.Description" id="editor" class="form-control" rows="3" placeholder="Haber Açıklaması ..."></textarea>
                        </div>
                    </div>
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            Kaydet
                        </button>
                        <a class="btn btn-outline-info ml-6" asp-controller="News" asp-action="NewsList">
                            <i class="fas fa-chevron-left"></i>
                            Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.col -->
</div>