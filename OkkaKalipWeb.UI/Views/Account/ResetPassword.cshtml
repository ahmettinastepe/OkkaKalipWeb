@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div id="content" class="site-content">
    <div class="page-header" style="background: url('@Url.Content("~/img/banner/"+Model.GetBannerImageUrl()??"main-banner.jpg")') no-repeat center center;">
        <div class="container">
            <div class="breadc-box no-line">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="page-title">Şifre Sıfırlama</h2>
                        <ul id="breadcrumbs" class="breadcrumbs none-style">
                            <li asp-active-controllers="Home" asp-active-actions="Index" asp-active-class="current-menu-ancestor current-menu-parent">
                                <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            <li class="active">Şifre Sıfırla</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3>Şifre Sıfırla</h3>
                    @if (ViewBag.ErroMessage != null)
                    {
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    }
                    <form class="login-form" asp-controller="Account" asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" name="token" value="@Model.Token" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email *</label>
                                    <input asp-for="Email" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Şifre *</label>
                                    <input asp-for="Password" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-block btn-primary">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>