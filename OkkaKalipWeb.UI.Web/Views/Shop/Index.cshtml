@model ProductListModel
@{
    ViewData["Title"] = "Index";
}

<div id="content" class="site-content">
    <div class="page-header" style="background: url('https://via.placeholder.com/1920x450.png') no-repeat center center;">
        <div class="container">
            <div class="breadc-box no-line">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="page-title">Industris shop</h2>
                        <ul id="breadcrumbs" class="breadcrumbs none-style">
                            <li><a href="index.html">Home</a></li>
                            <li class="active">Shop</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-4 primary-sidebar">
                    <div id="search-2" class="widget widget_search">
                        <form role="search" method="get" id="search-form" class="search-form" action="#">
                            <div class="input-group">
                                <input type="search" name="EMAIL" class="form-control search-field" placeholder="search..." value="" name="s">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-search"><i class="icon ion-md-search"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <div id="categories-2" class="widget filter_price">
                        <h4 class="widget-title">Finter by price copy</h4>
                        <div class="filter-price">
                            <div class="price-slide"></div>
                            <a href="#" class="btn-filter">Filter</a>
                            <span>Price: $50  -  $500</span>
                        </div>
                    </div>
                    <div id="categories-2" class="widget widget_categories">
                        <h4 class="widget-title">Categories</h4>
                        <ul>
                            <li><a href="#">All Products</a></li>
                            <li class="cat-item cat-item-3"><a href="#">Transportation & Distribution</a></li>
                            <li class="cat-item cat-item-4"><a href="#">Oil & Gas exploited</a></li>
                            <li class="cat-item cat-item-5 current-menu-item"><a href="#">Automotive Manufacturing</a></li>
                            <li class="cat-item cat-item-6"><a href="#">Industrial Construction</a></li>
                            <li class="cat-item cat-item-1"><a href="#">Manufacture</a></li>
                            <li class="cat-item cat-item-1"><a href="#">Green Energy</a></li>
                        </ul>
                    </div>
                    <div id="tag_cloud-2" class="widget widget_tag_cloud">
                        <h4 class="widget-title">Product Tags</h4>
                        <div class="tagcloud">
                            <a href="#">Factory</a>
                            <a href="#">Construction</a>
                            <a href="#">Automotive</a>
                            <a href="#">Green Energy</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        @foreach (var product in Model.Products)
                        {
                            <div class="col-md-6">
                                <div class="product-box">
                                    <div class="product-head">
                                        <img src="https://via.placeholder.com/750x750.png" alt="image product">
                                        <div class="product-btn">
                                            <a href="#" class="btn btn-primary">Add to cart</a>
                                            <a asp-controller="Shop" asp-action="Detail" class="btn view-detail">Ürün Detayı</a>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="product-price"><span class="sale">$13.00 </span><span class="price">$@product.Price</span></div>
                                        <h3><a href="#">@product.Name </a></h3>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-md-12">
                            <ul class="page-pagination shop-pagination none-style">
                                <li><span aria-current="page" class="page-numbers current">1</span></li>
                                <li><a class="page-numbers" href="#">2</a></li>
                                <li><a class="page-numbers" href="#">3</a></li>
                                <li><a class="page-numbers" href="#">...</a></li>
                                <li><a class="page-numbers" href="#">23</a></li>
                                <li><a class="prev page-numbers" href="#"><i class="icon ion-ios-arrow-back"></i></a></li>
                                <li><a class="next page-numbers" href="#"><i class="icon ion-ios-arrow-forward"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>